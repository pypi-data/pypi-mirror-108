{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Environment schema",
  "type": "object",
  "definitions": {
    "hw_cpu": {
      "type": "object",
      "properties": {
        "processors": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "cores": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "family": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "model": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "model_name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "hw_disk": {
      "type": "object",
      "properties": {
        "space": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "hw_block": {
      "type": "object",
      "properties": {
        "arch": {
          "type": "string"
        },
        "memory": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        },
        "cpu": {
          "$ref": "#/definitions/hw_cpu"
        },
        "disk": {
          "$ref": "#/definitions/hw_disk"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "hw_and": {
      "type": "object",
      "properties": {
        "and": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/hw_cpu"
              },
              {
                "$ref": "#/definitions/hw_disk"
              },
              {
                "$ref": "#/definitions/hw_block"
              },
              {
                "$ref": "#/definitions/hw_and"
              },
              {
                "$ref": "#/definitions/hw_or"
              }
            ]
          }
        }
      },
      "required": [
        "and"
      ]
    },
    "hw_or": {
      "type": "object",
      "properties": {
        "or": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/hw_cpu"
              },
              {
                "$ref": "#/definitions/hw_disk"
              },
              {
                "$ref": "#/definitions/hw_block"
              },
              {
                "$ref": "#/definitions/hw_and"
              },
              {
                "$ref": "#/definitions/hw_or"
              }
            ]
          }
        }
      },
      "required": [
        "or"
      ]
    },
    "hw_requirements": {
      "anyOf": [
        {
          "$ref": "#/definitions/hw_cpu"
        },
        {
          "$ref": "#/definitions/hw_disk"
        },
        {
          "$ref": "#/definitions/hw_block"
        },
        {
          "$ref": "#/definitions/hw_and"
        },
        {
          "$ref": "#/definitions/hw_or"
        }
      ],
      "required": []
    },
    "os_requirements": {
      "type": "object",
      "properties": {
        "compose": {
          "type": "string"
        }
      },
      "required": [
        "compose"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "hw": {
      "$ref": "#/definitions/hw_requirements"
    },
    "os": {
      "$ref": "#/definitions/os_requirements"
    },
    "pool": {
      "anyOf": [
        {
          "type": [
            "string"
          ]
        },
        {
          "type": [
            "null"
          ]
        }
      ],
      "default": null
    },
    "snapshots": {
      "type": "boolean",
      "default": false
    },
    "spot_instance": {
      "anyOf": [
        {
          "type": [
            "boolean"
          ]
        },
        {
          "type": [
            "null"
          ]
        }
      ],
      "default": null
    }
  },
  "required": [
    "hw",
    "os"
  ],
  "additionalProperties": false
}
